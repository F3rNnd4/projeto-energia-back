generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comodo {
  id           Int           @id @default(autoincrement())
  nome         String // Nome do c√¥modo (ex: sala, cozinha, etc.)
  dispositivos Dispositivo[] // Relacionamento com Dispositivo

  @@map("comodos")
}

model Dispositivo {
  id       Int    @id @default(autoincrement())
  nome     String // Tipo: ventilador, TV, etc.
  potencia Float // em Watts (W)
  tempoUso Float // em horas por dia
  voltagem Float // em Volts (V)
  corrente Float // em Amperes (A)
  comodoId Int
  comodo   Comodo @relation(fields: [comodoId], references: [id])

  @@map("dispositivos")
}
