generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comodo {
  id           Int           @id @default(autoincrement())
  nome         String
  dispositivos Dispositivo[]

  @@map("comodos")
}

model Dispositivo {
  id        Int     @id @default(autoincrement())
  nome      String
  potencia  Float
  tempoUso  Float
  voltagem  Float
  corrente  Float
  comodoId  Int
  comodo    Comodo  @relation(fields: [comodoId], references: [id])
  marca     String?
  descricao String?

  @@map("dispositivos")
}
